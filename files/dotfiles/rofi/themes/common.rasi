* {
    font:   "BerkeleyMono Nerd Font Mono Medium 12";

    background-color:   transparent;
    text-color:         @fg0;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

configuration {
    hover-select: true;
    me-select-entry: "";
    me-accept-entry: [ MousePrimary, MouseSecondary, MouseDPrimary ];
    normal-window: true;
}

window {
    location:       north;
    width:          480;
    y-offset:       45%;

    border:         1px;
    border-radius:  @border-radius;
    border-color:   @border;

    background-color:   @background;
}

mainbox {
    padding:    14px;
}

element selected {
    text-color: @fg2;
    font:   "BerkeleyMono Nerd Font Mono Bold 12";
}

inputbar {
    background-color:   @bg1;
    border-color:       @inputborder;
    border:         1px;
    border-radius:  @inputborder;

    padding:    7px 14px;
    spacing:    7px;
    children:   [ entry ];
}

prompt {
    text-color: @fg0;
}

entry {
    placeholder:        "Search";
    placeholder-color:  @fg3;
    text-color: @fg4;
    font:   "BerkeleyMono Nerd Font Mono Bold 12";
}

message {
    margin:             12px 0 0;
    border-radius:      0;
    border-color:       @bg2;
    background-color:   @bg2;
}

textbox {
    padding:    0px 0px;
}

listview {
    background-color:   transparent;

    margin:     7px 0 0;
    lines:      8;
    columns:    1;

    fixed-height: false;
}

element {
    padding:        7px 14px;
    spacing:        0px;
    border-radius:  @border-radius;
}

element normal active {
    text-color: @selection;
}

element selected normal, element selected active {
    background-color:   @selection;
}

element-icon {
    size:           1em;
    vertical-align: 0.5;
}

element-text {
    text-color: inherit;
}
