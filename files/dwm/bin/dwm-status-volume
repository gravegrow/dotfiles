#!/bin/bash

case $BUTTON in
1) dwm-volume-change 5%+ ;;
2) dwm-volume-change "toggle" ;;
3) dwm-volume-change 5%- ;;
esac

bg=#161617
fg=#8A9A7B
panelcolor=#1E2030
icon="󰕾"

value="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | sed "s/[^0-9]*//g" | sed "s/^0*//")%"
if wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep -q "MUTED"; then
	fg=#ED8796
	value="MUTED"
	icon="󰝟"
fi

if [[ $1 ]]; then
	return 0
	printf "^c$fg^^b$bg^"
	echo $icon
else
	printf "^c$fg^^b$bg^ "
	echo "$icon $value"
fi
